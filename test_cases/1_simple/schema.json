{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/simple_primitives.schema.json",
  "title": "SimplePrimitives",
  "description": "A simple structure containing all supported primitive types.",
  "type": "object",
  "properties": {
    "isAvailable": {
      "description": "Availability status",
      "type": "boolean"
    },
    "count": {
      "description": "The number of items",
      "type": "integer"
    },
    "price": {
      "description": "The price of the item",
      "type": "number"
    },
    "name": {
      "description": "The name of the item",
      "type": "string"
    }
  },
  "required": [
    "isAvailable",
    "count",
    "price",
    "name"
  ]
}
